<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFCDD2"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:elevation="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/favorite_view"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_marginTop="@dimen/_17sdp"
            android:layout_marginHorizontal="@dimen/_17sdp"
            app:cardCornerRadius="@dimen/_50sdp">

            <ImageView
                android:id="@+id/picCartFav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/amrecana" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/titleTaxFav"
                android:textColor="#1A0440"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Espresso"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold" />
            <TextView
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_weight="1"
                android:id="@+id/extraFav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="with milk"
                android:textColor="#FF9800"
                android:textSize="@dimen/_13ssp" />
            <LinearLayout
                android:layout_marginTop="@dimen/_17sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EGP "
                    android:textColor="#FF5722"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/totalFav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.20"
                    android:textColor="#FF5722"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />

            </LinearLayout>




        </LinearLayout>
        <ImageView
            android:id="@+id/remove"
            android:layout_margin="@dimen/_10sdp"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/dealet_fav"/>



    </LinearLayout>

        <LinearLayout

            android:layout_width="@dimen/_185sdp"
            android:layout_gravity="end"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
<LinearLayout
    android:layout_weight="1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:src="@drawable/star" />

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:textColor="#170E02"
                android:textSize="@dimen/_12ssp" />
</LinearLayout>

            <LinearLayout

                android:id="@+id/addFavorite"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/blas"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/_19sdp"
                    android:layout_height="@dimen/_19sdp"
                    android:src="@drawable/baseline_add_24" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>